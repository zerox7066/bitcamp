<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="java100.app.dao.RoomDao">

    <resultMap type="room" id="roomMap">
        <id column="no" property="no"/>
        
        <result column="loc" property="location"/>
        <result column="name" property="name"/>
        <result column="capacity" property="capacity"/>
    </resultMap>

<!-- 
    <sql id="select1">
        select 
            no, 
            name, 
            (kor + eng + math) as sum,
            ((kor + eng + math) / 3) as aver
    </sql>
 -->
 
    <select id="findAll" resultMap="roomMap" parameterType="map">
        select 
            no,
            loc,
            name,
            capacity 
        from ex_room 

        <if test="words != null">
            <where>
                name in 
                <foreach collection="words" item="word" 
                         open="(" close=")" separator=",">
                    #{word}
                </foreach>
                or loc in 
                <foreach collection="words" item="word" 
                         open="(" close=")" separator=",">
                    #{word}
                </foreach>
            </where>
        </if>
        
        order by
        <choose>
            <when test="orderColumn == 'loc' and align == 'desc'">
                loc desc
            </when>
            <when test="orderColumn == 'loc' and align == 'asc'">
                loc asc
            </when>
            <otherwise>
                no asc
            </otherwise>
        </choose>
        
        limit #{startIndex}, #{size}
        
    </select>
    
    <select id="countAll" resultType="int">
        select count(*) from ex_room
    </select>
    
    <insert id="insert" parameterType="board">
        insert into ex_room(loc,name,capacity) 
        values(#{location},#{name},#{capacity})
    </insert>
    
    <delete id="delete" parameterType="int">
        delete from ex_room
        where no=#{value}
    </delete>
</mapper>